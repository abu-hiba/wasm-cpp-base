{
  "name": "wasm-cpp-base",
  "version": "1.0.0",
  "description": "A basic template for C++ WebAssembly projects.",
  "scripts": {
    "build:wasm": "emcmake cmake -B wasmBuild -S . && cmake --build wasmBuild/ && mkdir -p public/wasm/ && cp wasmBuild/main.wasm wasmBuild/main.js public/wasm/",
    "start": "vite",
    "dev": "vite",
    "build": "npm run build:wasm && vite build",
    "serve": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abu-hiba/wasm-cpp-base.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abu-hiba/wasm-cpp-base/issues"
  },
  "homepage": "https://github.com/abu-hiba/wasm-cpp-base#readme",
  "dependencies": {
    "solid-js": "^1.8.12"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-solid": "^2.9.1"
  }
}
